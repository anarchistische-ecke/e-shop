SPRING_PROFILES_ACTIVE=prod

# PostgreSQL (running in Docker on the VM)
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/eshop
SPRING_DATASOURCE_USERNAME=eshopUser
SPRING_DATASOURCE_PASSWORD=change-me

# Postgres container (docker-compose.prod.yml)
POSTGRES_DB=eshop
POSTGRES_USER=eshopUser
POSTGRES_PASSWORD=change-me

# Redis (running on the VM or managed)
SPRING_DATA_REDIS_HOST=redis
SPRING_DATA_REDIS_PORT=6379

# CORS and security
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com
JWT_SECRET=replace-with-strong-random-secret

# Yandex Object Storage (S3-compatible)
YANDEX_STORAGE_BUCKET=your-bucket
YANDEX_STORAGE_KEY=your-access-key
YANDEX_STORAGE_SECRET=your-secret-key
YANDEX_STORAGE_ENDPOINT=https://storage.yandexcloud.net
# Keycloak
KEYCLOAK_ISSUER_URI=https://auth.example.com/realms/cozyhome
